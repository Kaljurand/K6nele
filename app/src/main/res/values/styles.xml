<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.K6nele" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!--
    <style name="Theme.K6nele.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar" />
-->
    <style name="Theme.K6nele.Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.K6nele.Dialog.NoActionBar" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
    <style name="Theme.K6nele.DialogWhenLarge" parent="Theme.AppCompat.DayNight.DialogWhenLarge" />

    <style name="Theme.K6nele.DialogWhenLarge.NoActionBar" parent="Theme.AppCompat.DayNight.DialogWhenLarge" />
-->

    <style name="Theme.K6nele.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.K6nele.Light.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.K6nele.Translucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="K6nele.TextAppearance.Design.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>