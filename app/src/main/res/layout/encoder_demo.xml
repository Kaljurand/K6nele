<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layoutMargin4dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="text, actionNext"
            android:imeActionLabel="NEXT"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:privateImeOptions="privateImeOptions"
            android:tag="tag"
            android:textLocale="et-EE"
            android:tooltipText="Tooltip, which seems to block the copy/paste menu" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="text, actionPrevious"
            android:imeActionLabel="PREVIOUS"
            android:imeOptions="actionPrevious"
            android:inputType="text" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="text, actionSend"
            android:imeActionLabel="SEND"
            android:imeOptions="actionSend"
            android:inputType="text" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="text, actionDone"
            android:imeActionLabel="DONE"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="text, actionGo"
            android:imeActionLabel="GO"
            android:imeOptions="actionGo"
            android:inputType="text" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="text, actionNone"
            android:imeActionLabel="NONE"
            android:imeOptions="actionNone"
            android:inputType="text" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="textPassword, actionGo"
            android:imeActionLabel="GO PASSWORD"
            android:imeOptions="actionGo"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etTest0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="textMultiLine, actionSearch"
            android:imeActionLabel="SEARCH MULTILINE"
            android:imeOptions="actionSearch"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonTest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/buttonImeSpeak"
            android:text="@string/buttonImeSpeak" />
    </LinearLayout>
</ScrollView>