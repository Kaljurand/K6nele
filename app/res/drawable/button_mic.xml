<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/buttonPressed2" android:startColor="@color/buttonPressed1" />

            <stroke android:width="1dp" android:color="@color/very_transparent" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/buttonFocused2" android:startColor="@color/buttonFocused1" />

            <stroke android:width="1dp" android:color="@color/very_transparent" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/buttonNormal2" android:startColor="@color/buttonNormal1" />

            <stroke android:width="1dp" android:color="@color/very_transparent" />
        </shape>
    </item>

</selector>